            validation={validation}
            editMode={editMode}
            storeDiff={storeDiff}
            isLoading={isLoading}
        >
    {{/ if }}
    <Typography id="{{ getXMIID child }}">
        { t('{{ getTranslationKeyForVisualElement child }}', { defaultValue: '{{ child.text }}' }) as string }
    </Typography>
    {{# if child.customImplementation }}
        </ComponentProxy>
    {{/ if }}
</Grid>
