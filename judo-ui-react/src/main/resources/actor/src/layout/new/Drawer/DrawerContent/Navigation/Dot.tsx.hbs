import { CSSObject, PaletteColor, useTheme } from '@mui/material/styles';
import { Box, Palette } from '@mui/material';

interface Props {
  color: keyof Palette;
  size?: number;
  variant?: string;
  sx?: CSSObject;
}

const Dot = ({ color, size, variant, sx }: Props) => {
  const theme = useTheme();

  return (
    <Box
      component="span"
      sx={ {
        width: size || 8,
        height: size || 8,
        borderRadius: '50%',
        bgcolor: variant === 'outlined' ? '' : (theme.palette[color] as PaletteColor).main,
        ...(variant === 'outlined' && {
          border: `1px solid ${(theme.palette[color] as PaletteColor).main}`
        }),
        ...sx
      } }
    />
  );
};

export default Dot;
