import { ChangeEvent } from 'react';
import { useTheme } from '@mui/material/styles';
import { FormControlLabel, Radio, RadioGroup } from '@mui/material';

import useConfig from '../../../etc/useConfig';
import { ThemeMode } from '../../../etc/types/config';

const ThemeModeLayout = () => {
  const theme = useTheme();

  const { mode, onChangeMode } = useConfig();

  const handleModeChange = (event: ChangeEvent<HTMLInputElement>) => {
    onChangeMode(event.target.value as ThemeMode);
  };

  return (
    <RadioGroup row value={mode} onChange={handleModeChange}>
      <FormControlLabel
        control={<Radio value="light" />}
        sx={ { display: 'flex', '& .MuiFormControlLabel-label': { flex: 1 } } }
        label={'Light'}
      />
      <FormControlLabel
        control={<Radio value="dark" />}
        sx={ { display: 'flex', '& .MuiFormControlLabel-label': { flex: 1 } } }
        label={'Dark'}
      />
    </RadioGroup>
  );
};

export default ThemeModeLayout;
