import type { TFunction } from 'i18next';
import type { AlternativeApplicationGenerator } from './interfaces';

export const generateAlternativeApplications: AlternativeApplicationGenerator = (t: TFunction) => {
    return {
        {{ debug applications }}
        {{# each (getAlternativeApplications application applications) as |app| }}
            '{{ toUnderscore (getFullAppName app) }}': t('applications.{{ app.actor.simpleName }}', { defaultValue: '{{ app.actor.simpleName }}' }) as string,
        {{/ each }}
    };
};
